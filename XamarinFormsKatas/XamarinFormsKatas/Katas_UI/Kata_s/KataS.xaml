<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsKatas.Katas_UI.Kata_s.KataS">
    <ContentPage.Content>
        <FlexLayout Direction="Column">
            
            <FlexLayout Direction="Row" FlexLayout.Grow="1">
                <BoxView BackgroundColor="Blue" FlexLayout.Grow="1"/>
                <BoxView BackgroundColor="Yellow" FlexLayout.Grow="1"/>
            </FlexLayout>
            
            <FlexLayout Direction="Row" FlexLayout.Grow="1">                
                <BoxView BackgroundColor="Brown" FlexLayout.Grow="1"/>
                <BoxView BackgroundColor="Red" FlexLayout.Grow="1"/>
            </FlexLayout>
            
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>